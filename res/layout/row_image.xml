	    android:layout_height="16dp"
	    android:orientation="vertical"
	    android:background="@drawable/window_front"
	    >
</ImageView>
<ImageView
        android:id="@+id/imageWindowViewUp"
        android:layout_weight="0"
	    android:layout_width="16dp"
	    android:layout_height="16dp"
	    android:orientation="vertical"
	    android:background="@drawable/window_corner"
